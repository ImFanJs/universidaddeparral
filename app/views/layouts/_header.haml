%header.container-fluid
	.col-md-4.logo
		=link_to (image_tag 'logo2.png'), root_path
	%nav.navbar.navbar-default.col-md-7.col-md-offset-1.bg-suc.small-margin
		.container-fluid
			.navbar-header
				%button{ "type" => "button", "class" => "navbar-toggle collapsed", "data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1", "aria-expanded" => "false" }
					%span.sr-only Toggle navigation
					%span.icon-bar.black-text
					%span.icon-bar.black-text
					%span.icon-bar.black-text
			.collapse.navbar-collapse#bs-example-navbar-collapse-1
				.col-md-2
				%ul.nav.navbar-nav.black-text.col-md-10
					%li{:class => "presentacion #{'activa' if current_page?(root_path)}"}=link_to "Inicio", root_path
					- if usuario_signed_in?
						%li.presentacion=link_to "Editar Perfil", edit_usuario_registration_path
						%li.presentacion=link_to "Salir", destroy_usuario_session_path, :method => :delete
					- else
						%li{:class => "presentacion #{'activa' if current_page?(welcome_quienes_somos_path)}"}=link_to "Quienes Somos", welcome_quienes_somos_path
						%li{:class => "disabled presentacion #{'activa' if current_page?(welcome_carreras_path)}"}=link_to "Carreras"
						%li{:class => "disabled presentacion #{'activa' if current_page?(welcome_servicios_path)}"}=link_to "Servicios"
						%li{:class => "presentacion #{'activa' if current_page?(welcome_contacto_path)}"}=link_to "Contacto", welcome_contacto_path
						%li{:class => "presentacion #{'activa' if current_page?(usuario_session_path)}"}=link_to "Entrar", new_usuario_session_path