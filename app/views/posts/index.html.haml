- if !usuario_signed_in?
  = render 'layouts/banner'
.slider
  %ul
    %li= image_tag "edificio.jpg"
    %li= image_tag "graduacion.jpg"
    %li= image_tag "uni.jpg"
.container-fluid
  .col-md-12.top-padding.bottom-padding
    %h1.text-center.green-text Bienvenidos a UDP
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Carreras
    .opaco.circle.bg-green.center-block.small-margin=image_tag "lic.png"
    %p.top-padding=link_to "Conoce nuestras Carreras"
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Maestrías
    .circle.bg-green.center-block.small-margin=image_tag "maestrias.png"
    %p.top-padding=link_to "Conoce nuestras Maestrías"
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Campus
    .circle.bg-green.center-block.small-margin=image_tag "campus.png"
    %p.top-padding=link_to "Conoce nuestro Campus", welcome_quienes_somos_path
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Inscripciones
    .circle.bg-green.center-block.small-margin=image_tag "inscripcion.png"
    %p.top-padding=link_to "Conoce los requisitos de Inscripción"
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Becas
    .circle.bg-green.center-block.small-margin=image_tag "becas.png"
    %p.top-padding=link_to "Conoce nuestras Becas"
  .col-sm-6.col-lg-4.text-center.border
    %h3.gray-text Servicio Social
    .circle.bg-green.center-block.small-margin=image_tag "social.png"
    %p.top-padding=link_to "Realiza tu servicio social"
.container
  .col-md-12.top-padding.bottom-padding.top-margin-md
    %h2.text-center.text-info Noticias Recientes
    - @posts.each do |post|
      .col-md-4.col-sm-6.border
        %h4.text-center.gray-text= post.title
        .imagen.padding-sm.puntero=image_tag post.image
        %p.padding-sm= post.description[0..140] + "..."
        %button{ "type" => "button", "class" => "btn btn-primary btn-sm", "data-toggle" => "modal", "data-target" => "#miModal#{post.id}" } Leer Más
        .modal.fade{ "id" => "miModal#{post.id}", "tabindex" => "-1", "role" => "dialog", "aria-labelledby" => "myModalLabel" }
          .modal-dialog{ "role" => "document" }
            .modal-content
              .modal-header.bg-green
                %button{ "type" => "button", "class" => "close", "data-dismiss" => "modal", "aria-label" => "Close"}
                  %span{ "aria-hidden" => "true"} &times;
                %h4.text-center.white-text.bottom-padding-xs#myModalLabel= post.title
              .modal-body.bg-success
                .imagen.padding-sm=image_tag post.image
                %p.padding-sm= post.description
              .modal-footer
                %br
                %button{ "type" => "button", :class => "btn btn-primary btn-sm", "data-dismiss" => "modal"} Close
        - if usuario_signed_in?
          %p= link_to 'Edit', edit_post_path(post)
          %p= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
  - if usuario_signed_in?
    %p.pull-right= link_to '+ Agregar Post', new_post_path
